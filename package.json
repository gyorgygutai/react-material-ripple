{
  "name": "react-material-ripple",
  "description": "A Material Ripple ReactJS component",
  "main": "dist/index.js",
  "version": "0.1.0",
  "jsnext:main": "components/index.js",
  "module": "components/index.js",
  "files": [
    "src",
    "dist",
    "README"
  ],
  "scripts": {
    "lint": "eslint components/** tests/**",
    "lintfix": "eslint --fix components/** tests/**",
    "prepublish": "npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "storybook": "start-storybook -p 9002",
    "test": "mocha --require tests/config/setup 'tests/**/*.test.js'",
    "test:watch": "mocha --require tests/config/setup 'tests/**/*.test.js' --watch",
    "test:cover": "istanbul cover -x *.test.js _mocha -- -R spec --require tests/config/setup 'tests/**/*.test.js'",
    "test:report": "cat ./coverage/lcov.info | codecov && rm -rf ./coverage",
    "build": "babel components --out-dir dist",
    "docs": "build-storybook -o docs",
    "commit": "git cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gyorgygutai/react-material-ripple.git"
  },
  "keywords": [
    "react",
    "material",
    "ripple"
  ],
  "author": "Gyorgy Gutai",
  "license": "MIT",
  "homepage": "https://github.com/gyorgygutai/react-material-ripple",
  "devDependencies": {
    "@kadira/storybook": "^2.24.0",
    "@kadira/storybook-addon-actions": "^1.1.1",
    "@kadira/storybook-addon-knobs": "^1.3.0",
    "@kadira/storybook-addon-options": "^1.0.1",
    "@kadira/storybook-deployer": "^1.0.0",
    "autoprefixer": "^6.4.1",
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.16.0",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.5.2",
    "codecov.io": "^0.1.6",
    "commitizen": "^2.8.6",
    "cz-conventional-changelog": "^1.2.0",
    "enzyme": "^2.4.1",
    "eslint": "^3.7.1",
    "eslint-config-standard": "^6.2.0",
    "eslint-config-standard-react": "^4.2.0",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-react": "^6.3.0",
    "eslint-plugin-standard": "^2.0.1",
    "eventsource-polyfill": "^0.9.6",
    "extract-text-webpack-plugin": "^1.0.1",
    "invariant": "^2.0.0",
    "isparta": "^4.0.0",
    "istanbul": "^1.1.0-alpha.1",
    "jsdom": "^9.6.0",
    "mocha": "^3.1.0",
    "node-sass": "^3.10.1",
    "react-addons-test-utils": "^15.3.2",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "semantic-release": "^4.3.5",
    "sinon": "^1.17.6"
  },
  "peerDependencies": {
    "classnames": "^2.2.3",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "prop-types": "^15.6.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
